              "loadingIndicator": true
            }
          ]
        },
        {
          "elementType": "linkButton",
          "title": "Pixar",
          "events": [
            {
              "eventName": "click",
              "action": "ajaxUpdate",
              "targetId": "character_container",
              "region": "content",
              "ajaxRelativePath": "./characters-pixar.json",
              "loadingIndicator": true
            }
          ]
        },
        {
          "elementType": "linkButton",
          "title": "Villains",
          "events": [
            {
              "eventName": "click",
              "action": "ajaxUpdate",
              "targetId": "character_container",
              "region": "content",
              "ajaxRelativePath": "./characters-villains.json",
              "loadingIndicator": true
            }
          ]
        }
      ]
    },
    {
      "elementType": "container",
      "id": "character_container",
